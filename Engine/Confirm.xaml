<Window x:Class="CombineDesign.Confirm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirm Delete" Height="125" Width="260" WindowStartupLocation="CenterScreen">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>
		<StackPanel Grid.Row="0" Grid.Column="0" Height="90" Width="250" HorizontalAlignment="Center">
			<Label Content="Are you sure?" HorizontalAlignment="Center" Height="32" Width="86"/>
			<StackPanel Orientation="Horizontal" Height="45" Width="200" HorizontalAlignment="Center">
				<Button Content="OK" Width="75" Click="Button_Click"/>
				<Separator Width="50" Opacity="0"/>
				<Button Content="Cancel" Width="75" IsCancel="True" Click="Button_Click_1"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>
