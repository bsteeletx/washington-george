<Window x:Class="CombineDesign.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ErrorWindow" Height="200" Width="300" Background="#FFE7E5E5">
    <Grid Height="150" Width="275">
		<TextBlock Height="48" HorizontalAlignment="Center" Margin="12,50,12,0" Name="textBlockMessage" Text="TextBlock" VerticalAlignment="Top" Width="250" TextWrapping="Wrap" TextAlignment="Center" />
		<Button Content="OK" Height="23" HorizontalAlignment="Center" Margin="0,0,0,0" Name="button1" VerticalAlignment="Bottom" Width="75" Click="button1_Click" />
	</Grid>
</Window>
